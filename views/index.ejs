<html>

<head>
    <title>首页</title>
</head>

<body>
    <h1>
        <%= title %>
    </h1>

    <% if(id != null) {%>
        <h3>登录用户ID：
            <%= id %> <a id="btnLogOut" href="javascript:void(0);">注销</a></h3>
        <% } %>
            <script src="/js/jquery-1.12.4.min.js" type="text/javascript"></script>
            <script type="text/javascript">   
                $(function () {
                    $('#btnLogOut').on('click', function () {

                        if (!confirm('确认要注销吗?')) {
                            return
                        }

                        $.ajax({
                            url: '/logout',
                            type: 'POST',
                            dataType: 'json',
                            data: {},
                            success: function (res) {
                                if (res) {

                                    var retVal = parseInt(res.code)

                                    switch (retVal) {
                                        case 0:
                                            alert('成功!')
                                            location.href = '/login'
                                            break
                                        default:
                                            alert('失败')
                                            break
                                    }
                                }
                                else {
                                    alert('操作失败')
                                }

                            },
                            error: function () {
                                alert('网络错误')
                            }
                        })
                    })
                })

            </script>
</body>

</html>